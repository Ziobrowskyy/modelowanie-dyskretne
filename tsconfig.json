{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./out",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },
  "include": [
    "./src"
  ]
}
